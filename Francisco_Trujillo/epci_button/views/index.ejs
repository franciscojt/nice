<!DOCTYPE html>
<html lang="en">
<head>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
	<script type ="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type ="text/javascript">
	$(document).ready(function(){
		
		var socket = io.connect();
		$('button').click(function(event){
			socket.emit('epicButton', {data:'epicButton'})
		})
		socket.on('buttonClicked', function(data){			
			
			$('#count').html(data.response);
		});
	
		
		$('#reset').click(function(event){
			socket.emit('buttonReset',{data: 'reset'})
			
			socket.on('reset', function(data){
				$('#count').html(data.reset);
			});
		});
				
	});
	
	</script>
	<meta charset="UTF-8">
	<title>Document</title>
</head>
<body>
	<div class = "row">
		<div class="col-md-8">
			<h1>The button has be pushed <span id = "count">0</span> Times</h1>
			<small>Press the epic button</small>
			<button class="btn btn-primary btn-lg" >Press me</button>
			<button id= "reset" class = "btn btn-danger btn-sm">Press me to reset</button>
		</div>
	</div>
</body>
</html>